{
    "compilerOptions": {
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "checkJs": true,
        "target": "ES2017",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}