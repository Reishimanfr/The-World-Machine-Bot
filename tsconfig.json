{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ESNext",
        "rootDir": "./src",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}