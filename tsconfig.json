{
  "compilerOptions": {
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./build",
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "target": "ES2016"
  },
  "include": [
    "src/**/*",
    "src/Types/process-env.d.ts",
    "src/Types/global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}